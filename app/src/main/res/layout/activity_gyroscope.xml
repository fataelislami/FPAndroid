<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gyroscope"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fataelislami.sensorkomurindo.View.Gyroscope">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GyroX : "
        android:id="@+id/GyroX"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GyroX"
        android:text="GyroY : "
        android:id="@+id/GyroY"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GyroZ : "
        android:layout_below="@+id/GyroY"
        android:id="@+id/GyroZ" />
//////////////////////////////////////////////////
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gyro_X"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:text="belum ada"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gyro_Y"
        android:text="belum ada"
        android:layout_alignBaseline="@+id/GyroY"
        android:layout_alignBottom="@+id/GyroY"
        android:layout_alignLeft="@+id/Gyro_X"
        android:layout_alignStart="@+id/Gyro_X" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gyro_Z"
        android:text="belum ada"
        android:layout_alignBaseline="@+id/GyroZ"
        android:layout_alignBottom="@+id/GyroZ"
        android:layout_alignLeft="@+id/Gyro_Y"
        android:layout_alignStart="@+id/Gyro_Y" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pindah sensor"
        android:layout_below="@+id/GyroZ"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:id="@+id/button2" />

</RelativeLayout>
